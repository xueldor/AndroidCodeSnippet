<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DrawView" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DrawPicView" />

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DrawPathView" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <Button
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="DrawBezerView" />
        <Button
            android:id="@+id/button5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="DrawBezerBallView" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <Button
            android:id="@+id/button_path_fill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="TestPathFill" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

<!--        <TextView-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="Test" />-->

        <com.xueldor.views.canvas.DrawView
            android:id="@+id/drawView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:visibility="gone"/>

        <com.xueldor.views.canvas.DrawPicView
            android:id="@+id/drawPicView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:visibility="gone"/>

        <com.xueldor.views.canvas.DrawPathView
            android:id="@+id/drawPathView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:visibility="gone"/>
        <com.xueldor.views.canvas.DrawBezierView
            android:id="@+id/drawBezerView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:visibility="gone"/>
        <com.xueldor.views.canvas.DrawBezierBallView
            android:id="@+id/drawBezerBallView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:visibility="gone"/>
        <com.xueldor.views.canvas.DrawPathFillView
            android:id="@+id/drawwPathFillView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:visibility="gone"/>
    </FrameLayout>

</LinearLayout>