<com.xueldor.androidcodesnippet.FlowLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:padding="30dp"
             tools:context=".Page1Fragment">
    <Button
        android:id="@+id/take_photo_beforeN_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="拍照7.0之前"/>
    <Button
        android:id="@+id/take_photo_sinceN_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="拍照7.0开始"/>
    <Button
        android:id="@+id/show_gif_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Gif"/>
</com.xueldor.androidcodesnippet.FlowLayout>
